<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/main.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include('nav.ejs', { user: user }) %>
    <div class="form-center">
      <form class="auth-form" action="/auth/login" method="POST">
        <h4>로그인</h4>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">이메일</label>
          <input
            name="useremail"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">비밀번호</label>
          <input
            name="password"
            type="password"
            class="form-control"
            id="exampleInputPassword1"
          />
        </div>
        <div class="mb-3 form-check">
          <input
            type="checkbox"
            class="form-check-input"
            id="rememberEmailCheck"
          />
          <label class="form-check-label" for="rememberEmailCheck"
            >날 기억해줘!</label
          >
        </div>
        <div class="auth-form-footer">
          <button type="submit" class="btn btn-primary">로그인</button>
          <button id="btn-register" class="btn btn-info">회원가입</button>
        </div>
      </form>
    </div>
    <script>
      const port = "<%= process.env.PORT %>";
      const btnRegister = document.getElementById("btn-register");

      btnRegister.addEventListener("click", (event) => {
        event.preventDefault(); // 폼 전송을 방지
        window.location.href = `http://localhost:${port}/auth/register`;
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
