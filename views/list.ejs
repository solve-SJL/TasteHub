<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/main.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs', { user: user }) %>

    <div class="album py-5 bg-body-tertiary">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <% for (let i =0; i< posts.length; i++){ %>
          <div class="col list-box" data-index="<%= posts[i]._id%>">
            <div class="card shadow-sm">
              <svg
                class="bd-placeholder-img card-img-top"
                width="100%"
                height="225"
                xmlns="http://www.w3.org/2000/svg"
                role="img"
                aria-label="Placeholder: Thumbnail"
                preserveAspectRatio="xMidYMid slice"
                focusable="false"
              >
                <title>Placeholder</title>
                <rect width="100%" height="100%" fill="#55595c" />
                <text x="50%" y="50%" fill="#eceeef" dy=".2em">
                  <%= posts[i].title%>
                </text>
              </svg>
              <div class="card-body">
                <p class="card-text"><%= posts[i].title%></p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary list-btn"
                    >
                      시작하기
                    </button>
                    <button
                      type="button"
                      class="btn btn-sm btn-outline-secondary rank-btn"
                    >
                      랭킹보기
                    </button>
                  </div>
                  <small class="text-body-secondary"
                    ><%= posts[i].title%></small
                  >
                </div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <div>
      <a href="/posts/list/<%= posts[posts.length-1]._id %>"
        ><button>다음</button></a
      >
    </div>
    <%- include('footer.ejs') %>
    <script>
      const lists = document.querySelectorAll(".list-box");
      const port = "<%= process.env.PORT %>";

      lists.forEach(function (list) {
        list.addEventListener("click", function () {
          const index = list.getAttribute("data-index");
          window.location.href = `http://localhost:${port}/posts/detail/${index}`;
        });
      });

      const rankButtons = document.querySelectorAll(".rank-btn");
      rankButtons.forEach(function (list) {
        list.addEventListener("click", function (event) {
          // 상위 요소로 이벤트가 전파되지 않도록 막음
          event.stopPropagation();
          window.location.href = `http://localhost:${port}`;
        });
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
