<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/main.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs', { user: user }) %>
    <div class="white-bg">
      <% for (let i =0; i< posts.length; i++){ %>
      <div class="list-box" data-index="<%= posts[i]._id%>">
        <h4><%= posts[i].title%></h4>
        <p><%= posts[i].content%></p>
      </div>
      <% } %>
    </div>
    <div>
      <a href="/posts/list/<%= posts[posts.length-1]._id %>"
        ><button>다음</button></a
      >
    </div>

    <script>
      const lists = document.querySelectorAll(".list-box");
      const port = "<%= process.env.PORT %>";

      lists.forEach(function (list) {
        list.addEventListener("click", function () {
          const index = list.getAttribute("data-index");
          window.location.href = `http://localhost:${port}/posts/list/detail/${index}`;
        });
      });
    </script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
