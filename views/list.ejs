<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="/main.css" rel="stylesheet" />
  </head>
  <body class="grey-bg">
    <%- include('nav.ejs', { user: user }) %>
    <div class="white-bg">
      <% for (let i =0; i< posts.length; i++){ %>
      <div class="list-box" data-index="<%= posts[i]._id%>">
        <h4><%= posts[i].title%></h4>
        <p><%= posts[i].content%></p>
      </div>
      <% } %>
    </div>
    <div>
      <a href="/list/<%= posts[posts.length-1]._id %>"><button>다음</button></a>
    </div>

    <script>
      const lists = document.querySelectorAll(".list-box");
      const port = "<%= process.env.PORT %>";

      lists.forEach(function (list) {
        list.addEventListener("click", function () {
          const index = list.getAttribute("data-index");
          window.location.href = `http://localhost:${port}/detail/${index}`;
        });
      });
    </script>
  </body>
</html>
